<table class="table table--striped table--condensed fade-in">
  <caption>{{t 'redmine.list-caption' host='project.adfinis-sygroup.ch'}}</caption>
  <colgroup>
    <col width="50">
    <col class="visible-xs" width="300">
    <col class="visible-lg" width="1">
    <col class="visible-lg" width="1">
    <col class="visible-xl" width="1">
    <col>
    <col class="visible-xl" width="200">
  </colgroup>
  <thead>
    <tr>
      <th>{{t 'redmine.id'}}</th>
      <th class="visible-xs">{{t 'redmine.project'}}</th>
      <th class="visible-lg">{{t 'redmine.tracker'}}</th>
      <th class="visible-lg">{{t 'redmine.status'}}</th>
      <th class="visible-xl">{{t 'redmine.priority'}}</th>
      <th>{{t 'redmine.subject'}}</th>
      <th class="visible-xl">{{t 'redmine.updated'}}</th>
    </tr>
  </thead>
  <tbody class="hidden-font loading-mask">
    {{#each (adsy-range 1 20) as |value|}}
      <tr>
        <td><a>#12345</a></td>
        <td class="visible-xs">Lorem Project</td>
        <td class="visible-lg">Bug</td>
        <td class="visible-lg">Needs Feedback</td>
        <td class="visible-xl">Low</td>
        <td><a>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</a></td>
        <td class="visible-xl nowrap">{{moment-format 0 'L LT'}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
