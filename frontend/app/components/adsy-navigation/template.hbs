<nav class="nav-side">
  <header class="nav-side-header">
    <button class="nav-toggle nav-side-toggle" {{action 'toggle'}}></button>
    <a href="#">
      <div class="nav-side-header-logo"></div>
      <div class="nav-side-header-title">Customer Center</div>
    </a>
  </header>
  <section class="nav-side-body">
    <ul class="nav-side-list">
      <li class="nav-side-list-item">
        {{#link-to 'index'}}
          <i class="fa fa-dashboard"></i>
          {{t 'nav.dashboard'}}
        {{/link-to}}
      </li>
      {{#if user.redmine}}
        <li class="nav-side-list-item">
          {{#link-to 'redmine'}}
            <i class="fa fa-bug"></i>
            {{t 'nav.redmine'}}
          {{/link-to}}
        </li>
      {{/if}}
      {{#if user.timed}}
        <li>
          {{#link-to 'timescout'}}
            <i class="fa fa-clock-o"></i>
            {{t 'nav.timescout'}}
          {{/link-to}}
        </li>
      {{/if}}
    </ul>
    {{#with user.wikis as |wikis|}}
      <ul class="nav-side-list">
        <li class="nav-side-list-header">{{t 'nav.wikis'}}</li>
        {{#each wikis as |wiki|}}
          <li class="nav-side-list-item">
            <a href="https://wiki.adfinis-sygroup.ch/{{wiki}}">
              <i class="fa fa-wikipedia-w"></i>
              <span class="nav-wiki-item">{{wiki}}-Wiki</span>
            </a>
          </li>
        {{/each}}
      </ul>
    {{/with}}
    <ul class="nav-side-list">
      <li class="nav-side-list-header">{{t 'nav.settings'}}</li>
      <li class="nav-side-list-item">
        <a href="#">
          <i class="fa fa-user"></i>
          {{t 'nav.profile'}}
        </a>
      </li>
    </ul>
    <ul class="nav-side-list">
      <li class="nav-side-list-item">
        <a class="pointer" {{action 'invalidateSession'}}>
          <i class="fa fa-sign-out"></i>
          {{t 'nav.logout'}}
        </a>
      </li>
    </ul>
  </section>
</nav>
{{yield}}
<div class="page-main-overlay" {{action 'close' on='click'}}></div>
