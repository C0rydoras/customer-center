<table class="table table--striped">
  <caption>{{t 'timescout.list-caption'}}</caption>
  <thead>
    <tr>
      <th>{{t 'timescout.subscription.short'}}</th>
      <th>{{t 'timescout.remaining-hours'}}</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each subscriptions as |subscription|}}
      <tr>
        <td>
          {{#link-to 'timescout.timesheet' subscription.id}}
            {{subscription.name}}
          {{/link-to}}
        </td>
        <td>
          {{subscription.availableTime.hours}}h
          {{subscription.availableTime.minutes}}min
        </td>
        <td>
          {{#link-to 'timescout.abo' subscription.id subscription.abotypeID}}
            {{t 'timescout.reload'}}
          {{/link-to}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
