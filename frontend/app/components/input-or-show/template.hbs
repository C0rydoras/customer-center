{{#if edit}}
  {{#if multiline}}
    {{textarea class="form-control" value=value placeholder=placeholder}}
  {{else}}
    {{input class="form-control" value=value placeholder=placeholder}}
  {{/if}}
{{else}}
  {{#if clipboard}}
    <a href="javascript:void(0)" {{action "copy"}}>
      <i class="fa fa-clipboard"></i> <span class="value">{{value}}</span>
    </a>
  {{else}}
    <div class="value">{{nl2br value}}</div>
  {{/if}}
{{/if}}
