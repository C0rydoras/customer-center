{{#if edit}}
  {{#if multiline}}
    {{textarea class='uk-textarea' value=value placeholder=placeholder}}
  {{else}}
    {{input class='uk-input' value=value placeholder=placeholder}}
  {{/if}}
{{else}}
  {{#with (if mask "********" value) as |_value|}}
    {{#if clipboard}}
      <a href="#" {{action "copy"}} title="Copy to clipboard">
        {{uk-icon 'copy'}} <span class="value">{{trim _value}}</span>
      </a>
    {{else}}
      <div class="value">{{autolink (nl2br value) true}}</div>
    {{/if}}
  {{/with}}
{{/if}}
