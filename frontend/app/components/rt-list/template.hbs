<table class="table table--striped table--condensed">
  <caption>{{t 'rt.list-caption'}}</caption>
  <thead>
    <tr>
      <th>{{t 'rt.id'}}</th>
      <th class="visible-sm">{{t 'rt.status'}}</th>
      <th>{{t 'rt.title'}}</th>
      <th class="visible-md">{{t 'rt.updated'}}</th>
      <th class="visible-lg">{{t 'rt.created'}}</th>
    </tr>
  </thead>
  {{#if showPager}}
    <tfoot>
      <tr>
        <td colspan="7">
          {{pagination-pager current=page count=totalPages}}
        </td>
      </tr>
    </tfoot>
  {{/if}}
  <tbody>
    {{#each model.data.tickets as |ticket|}}
      <tr>
        <td>#{{ticket.id}}</td>
        <td class="visible-sm">{{ticket.status}}</td>
        <td>{{ticket.subject}}</td>
        <td class="visible-md">{{moment ticket.lastUpdated 'L LT'}}</td>
        <td class="visible-lg">{{moment ticket.created 'L LT'}}</td>
      </tr>
    {{^}}
      <tr class={{if error 'danger'}}>
        <td colspan="6">
          {{#unless error}}
            No tickets found!
          {{else}}
            {{error}}
          {{/unless}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
