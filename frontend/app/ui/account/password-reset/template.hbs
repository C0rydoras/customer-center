<section class="page-header">
  <div class="page-header__inner">

    <NavBreadcrumbs @crumbs={{this.breadcrumbs}} />

    <h1 class="page-header__title">
      {{~t "page.account.password-reset.title"~}}
    </h1>

  </div>
</section>

<section class="section">
  <div class="section__inner">

    <form
      {{on "submit" this.submit}}
      class="form"
    >
      <fieldset class="form__fieldset">
        <p class="form__field">
          <label class="form__label">
            {{~t "page.account.password-reset.form.username"~}}
          </label>

          <div class="form__input">
            <Input
              @value={{this.changeset.username}}
              class="form__input__text"
              type="text"
            />
          </div>
        </p>
      </fieldset>

      <fieldset class="form__fieldset">
        <p class="form__controls">
          <button
            {{on "click" this.cancel}}
            class="form__cancel"
            type="button"
          >
            {{~t "page.account.password-reset.form.cancel"~}}
          </button>

          <button
            type="submit"
            class="form__submit"
          >
            {{~t "page.account.password-reset.form.submit"~}}
          </button>
        </p>
      </fieldset>
    </form>

  </div>
</section>
