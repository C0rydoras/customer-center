<div class="grid">
  <div class="grid-cell grid-cell--12of12 grid-cell-sm--8of12 grid-cell-lg--9of12">
    {{#if user.emails.length}}
      {{rt-list emails=user.emails limit=5 issues=model.rt.issues total=model.rt.total}}
    {{/if}}
  </div>
  <div class="grid-cell grid-cell--12of12 grid-cell-sm--4of12 grid-cell-lg--3of12">
    {{#if user.monitoring}}
      <table class="table table--striped">
        <caption>{{t 'symon.list-caption'}}</caption>
        <thead>
          <tr>
            <th>{{t 'symon.host'}}</th>
            <th>{{t 'symon.status'}}</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>topaxi.ch</td>
            <td>OK</td>
          </tr>
          <tr>
            <td>irc.topaxi.ch</td>
            <td>OK</td>
          </tr>
          <tr>
            <td>topaxi.codes</td>
            <td>OK</td>
          </tr>
        </tbody>
      </table>
    {{/if}}
  </div>
  <div class="grid-cell grid-cell--12of12 grid-cell-sm--8of12 grid-cell-lg--9of12">
    {{#if user.redmine}}
      {{redmine-list limit=5 issues=model.redmine.issues total=model.redmine.total}}
    {{/if}}
  </div>
  <div class="grid-cell grid-cell--12of12 grid-cell-sm--4of12 grid-cell-lg--3of12">
    {{#if user.timed}}
      {{ts-subscriptions}}
      <div>{{#link-to 'timescout'}}{{t 'timescout.history'}}{{/link-to}}</div>
    {{/if}}
  </div>
</div>
