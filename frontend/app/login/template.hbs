<div class="login-form">
  <form class="form-inline {{if loading 'form-loading'}}" {{action 'authenticate' on='submit'}}>
    <div class="form-group login-form-user">
      {{input type="text" value=identification class="form-control" placeholder=(t "global.Username") disabled=loading autofocus=true}}
    </div>
    <div class="form-group login-form-password">
      {{input type="password" value=password class="form-control" placeholder=(t "global.Password") disabled=loading}}
    </div>
    <button type="submit" class="btn btn-primary" disabled={{loading}}>{{t 'login.login'}}</button>
    <button type="button" class="login-form-password-reset btn btn-link" {{action 'passwordreset'}}>{{t 'login.forgot-password'}}</button>
  </form>
</div>
