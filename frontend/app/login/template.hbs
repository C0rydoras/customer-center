<div class="uk-container uk-flex uk-flex-center uk-flex-middle uk-flex-1 uk-flex-column">
  {{#uk-card color='' class='uk-card-login uk-animation-fade' width='2-3@m' as |card|}}
    {{#card.header class='uk-flex uk-flex-center'}}
      <img class="uk-width-2-3 uk-height-small" alt="Adfinis AG" src="/assets/pictures/adfinis-logo.svg">
    {{/card.header}}
    {{#card.body class='uk-padding-remove-vertical uk-margin-bottom'}}
      <form {{action 'authenticate' on='submit'}}>
        <div class="uk-grid-small" uk-grid>
          <div class="uk-width-1-1 uk-width-2-5@m uk-light">
            <div class="uk-inline uk-width-1-1">
              {{uk-icon 'user' class='uk-form-icon'}}
              {{input type='text' name='username' value=identification class='uk-input' placeholder=(t 'global.Username') disabled=loading autofocus=true}}
            </div>
          </div>
          <div class="uk-width-1-1 uk-width-2-5@m uk-light">
            <div class="uk-inline uk-width-1-1">
              {{uk-icon 'lock' class='uk-form-icon'}}
              {{input type='password' name='password' value=password class='uk-input' placeholder=(t 'global.Password') disabled=loading}}
            </div>
          </div>
          <div class="uk-width-1-1 uk-width-1-5@m">
            {{#uk-button type='submit' width='1-1' color='primary' loading=loading}}
              {{t 'login.login'}}
            {{/uk-button}}
          </div>
        </div>
      </form>
    {{/card.body}}
  {{/uk-card}}
</div>
