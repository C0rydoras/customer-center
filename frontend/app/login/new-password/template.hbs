<div class="uk-container uk-flex uk-flex-center uk-flex-middle uk-flex-1">
  <div class="uk-card uk-padding uk-card-login uk-width-2-3@m uk-animation-fade">
    <div class="uk-grid-small uk-margin" uk-grid>
      <div class="uk-width-1-1 uk-flex uk-flex-center uk-padding uk-padding-remove-horizontal uk-padding-remove-top">
        <img class="uk-width-2-3" alt="Adfinis SyGroup" src="/assets/pictures/adsy-logo.svg">
      </div>
      <div class="uk-width-1-1">
        {{t 'login.your-new-password-is:'}} <strong>{{model.password}}</strong>
      </div>
    </div>
    {{#link-to 'login' class='uk-link-muted'}}{{t 'login.back-to-login'}}{{/link-to}}
  </div>
</div>