<h2>{{t 'sysupport.admin.projects'}}</h2>

<div class="uk-overflow-auto" uk-scrollspy="target: > div; cls:uk-animation-slide-bottom-small; delay: 50;">
  {{#cc-data-table headers=headers model=model as |results|}}
    {{#each results as |project index|}}
    {{#link-to "sysupport-admin.detail" project.id data-test-project=index class=(if (gte alertTime project.totalTime._milliseconds) "uk-text-danger uk-link-reset" "uk-link-reset") tagName="tr"}}
        <td class="uk-text-bold uk-text-default">{{project.name}}</td>
        <td>{{project.customer.name}}</td>
        <td>{{project.billingType.name}}</td>
        <td>{{format-duration-short project.purchasedTime}}</td>
        <td>{{format-duration-short project.spentTime}}</td>
        {{#if (gte alertTime project.totalTime._milliseconds)}}
          <td class="uk-flex-inline uk-flex-between">{{mdi-icon "clock-alert-outline" fill="#ff0000" class="uk-margin-small-right"}}<span>{{format-duration-short project.totalTime}}</span></td>
        {{else}}
          <td>{{format-duration-short project.totalTime}}</td>
        {{/if}}
        <td>{{format-duration-short project.unconfirmedTime}}</td>
      {{/link-to}}
    {{else}}{{t 'global.empty'}}{{/each}}
  {{/cc-data-table}}
</div>
