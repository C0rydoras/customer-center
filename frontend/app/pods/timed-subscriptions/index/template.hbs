<h2>{{t 'timed.index.title'}}</h2>
<div uk-grid uk-scrollspy="target: > div; cls:uk-animation-slide-bottom-small; delay: 50 uk-margin-bottom">
  {{#each model as |project index|}}
    <div>
      {{#uk-card hover=true as |card|}}
        {{#card.header}}
          {{#card.title}}{{project.name}}{{/card.title}}
        {{/card.header}}
        {{#card.body}}
          <dl class="uk-description-list">
            <dt>{{t 'timed.time.ordered'}}:</dt>
            <dd>{{format-duration project.purchasedTime}}</dd>
            <dt>{{t 'timed.time.used'}}:</dt>
            <dd>{{format-duration project.spentTime}}</dd>
            <dt>{{t 'timed.time.total'}}:</dt>
            <dd>{{format-duration project.totalTime}}</dd>
          </dl>
        {{/card.body}}
        {{#card.footer}}
          {{#link-to 'timed-subscriptions.detail.reload' project.id class="uk-link-reset"}}
            {{uk-button data-test-reload-link=index color='primary' size='large' fill=true label=(t 'timed.index.charge') }}
          {{/link-to}}
          {{#link-to "timed-subscriptions.detail.index" project.id class="uk-link-reset"}}
            {{uk-button data-test-detail-link=index color='default' size='large' fill=true label=(t 'timed.index.details') }}
          {{/link-to}}
        {{/card.footer}}
      {{/uk-card}}
    </div>
  {{else}}<div>{{t 'global.empty'}}</div>{{/each}}
</div>
