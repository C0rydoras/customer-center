<h2>{{t 'timed.reload.select'}}</h2>
<div uk-grid  uk-scrollspy="target: > div; cls:uk-animation-slide-bottom-small; delay: 50">
  {{#each model.packages as |package index|}}
    <div class="uk-width-1-4@m uk-link-reset">
      {{#uk-card hover=true as |card|}}
        {{#card.header}}
            {{#card.title}}{{format-duration package.duration}}{{/card.title}}
        {{/card.header}}
        {{#card.body}}
          <dl class="uk-description-list">
            <dt>{{t 'timed.reload.price'}}:</dt>
            <dd>{{package.price}}</dd>
          </dl>
        {{/card.body}}
        {{#card.footer}}
          {{#uk-button data-test-project-reload=index class='uk-align-center' color='primary' on-click=(action "subscribe" package)}}
            {{t 'timed.reload.charge'}}
          {{/uk-button}}
        {{/card.footer}}
      {{/uk-card}}
    </div>
  {{else}}
    <p data-test-info-panel="0" class="uk-card uk-card-body uk-position-center uk-box-shadow-large">
      {{mdi-icon "information-outline" size=30 class="uk-margin-small-bottom"}}
      <span class="uk-card-title">{{t 'timed.reload.noPackage.title'}}</span><br>
      {{t 'timed.reload.noPackage.text'}}<br>
      {{t 'timed.reload.noPackage.phone'}}: +41 61 500 31 30<br>
      E-Mail: <a href="mailto:support@adfinis.com" class="uk-height-1-1">support@adfinis.com</a>
    </p>
  {{/each}}
</div>
